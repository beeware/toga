import openai
import pyttsx3

# Buraya kendi API anahtarÄ±nÄ± yaz
openai.api_key = "YOUR_OPENAI_API_KEY"

def sesli_chatbot():
    engine = pyttsx3.init()
    engine.setProperty("rate", 120)  # KonuÅŸma hÄ±zÄ±
    engine.setProperty("volume", 2.3)  # Ses seviyesi

    print("ğŸ¤– AkÄ±llÄ± Sesli Chatbot'a HoÅŸgeldin! Ã‡Ä±kmak iÃ§in 'Ã§Ä±k' yaz.")
    engine.say("AkÄ±llÄ± Sesli Chatbot'a HoÅŸgeldin! Ã‡Ä±kmak iÃ§in Ã§Ä±k yaz.")
    engine.runAndWait()

    while True:
        soru = input("Sen: ")

        if soru.lower() == "Ã§Ä±k":
            print("Chatbot: GÃ¶rÃ¼ÅŸmek Ã¼zere! ğŸ‘‹")
            engine.say("GÃ¶rÃ¼ÅŸmek Ã¼zere!")
            engine.runAndWait()
            break

        # ChatGPT'den cevap al
        cevap = openai.ChatCompletion.create(
            model="gpt-3.5-turbo",  # Daha geliÅŸmiÅŸ iÃ§in gpt-4 de olabilir
            messages=[{"role": "user", "content": soru}]
        )

        bot_cevap = cevap["choices"][0]["message"]["content"]

        print("Chatbot:", bot_cevap)
        engine.say(bot_cevap)
        engine.runAndWait()

