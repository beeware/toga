    import pyttsx3

def sesli_chatbot():
    engine = pyttsx3.init()
    engine.setProperty("rate", 150)  # KonuÅŸma hÄ±zÄ±
    engine.setProperty("volume", 1)  # Ses seviyesi (0.0 - 1.0)

    print("ğŸ¤– Sesli Chatbot'a HoÅŸgeldin! Ã‡Ä±kmak iÃ§in 'Ã§Ä±k' yaz.")
    engine.say("Sesli Chatbot'a HoÅŸgeldin! Ã‡Ä±kmak iÃ§in Ã§Ä±k yaz.")
    engine.runAndWait()

    while True:
        soru = input("Sen: ")

        if soru.lower() == "Ã§Ä±k":
            print("Chatbot: GÃ¶rÃ¼ÅŸmek Ã¼zere! ğŸ‘‹")
            engine.say("GÃ¶rÃ¼ÅŸmek Ã¼zere!")
            engine.runAndWait()
            break

        # Basit cevaplar (sen burayÄ± geliÅŸtirebilirsin)
        if "merhaba" in soru.lower():
            cevap = "Merhaba! NasÄ±lsÄ±n?"
        elif "nasÄ±lsÄ±n" in soru.lower():
            cevap = "Ä°yiyim, teÅŸekkÃ¼r ederim! Sen nasÄ±lsÄ±n?"
