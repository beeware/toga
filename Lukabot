# simple_chatbot.py

import random

# KullanÄ±cÄ±ya cevap verecek basit yanÄ±tlar
responses = {
    "merhaba": ["Merhaba!", "Selam!", "HoÅŸ geldin!"],
    "nasÄ±lsÄ±n": ["Ä°yiyim, sen nasÄ±lsÄ±n?", "HarikayÄ±m, teÅŸekkÃ¼rler!", "Fena deÄŸil :)"],
    "adÄ±n ne": ["Ben basit bir chatbot'um.", "Bana ChatBot diyebilirsin."],
    "gÃ¶rÃ¼ÅŸÃ¼rÃ¼z": ["GÃ¶rÃ¼ÅŸÃ¼rÃ¼z!", "HoÅŸÃ§a kal!", "Sonra konuÅŸuruz :)"],
}

def chatbot_response(user_input):
    user_input = user_input.lower()
    for key in responses:
        if key in user_input:
            return random.choice(responses[key])
    return "Bunu anlayamadÄ±m, baÅŸka bir ÅŸey sorabilir misin?"

def run_chatbot():
    print("ChatBot'a hoÅŸ geldin! Ã‡Ä±kmak iÃ§in 'Ã§Ä±k' yaz.")
    while True:
        user_input = input("Sen: ")
        if user_input.lower() == "Ã§Ä±k":
            print("ChatBot: GÃ¶rÃ¼ÅŸÃ¼rÃ¼z!")
            break
        response = chatbot_response(user_input)
        print("ChatBot:", response)

if __name__ == "__main__":
